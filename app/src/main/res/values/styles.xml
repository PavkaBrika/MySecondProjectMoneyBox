<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActivityBackground">
        <item name="android:background">@drawable/backgroundcolor</item>
    </style>
    <style name="ButtonsColor">
        <item name="android:tint">@color/mainActivityButtonsColor</item>
        <item name="android:backgroundTint">@color/buttonColor</item>
        <item name="cornerRadius">24dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ChangeCharacterActivityTextAndRadioButtonColor">
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonTint">@color/buttonColor</item>
    </style>
    <style name="ChangeCharacterActivityBackgroundTextViewColor">
        <item name="android:backgroundTint">@color/black</item>
    </style>
    <style name="MyEditTextTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/statusBarColor</item>
    </style>
    <style name="ThoughtsImageViewSrc">
        <item name="android:src">@drawable/thoughts2</item>
    </style>
    <style name="CustomShapeAppearanceBottomSheetDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">28dp</item>
        <item name="cornerSizeTopLeft">28dp</item>
    </style>
</resources>