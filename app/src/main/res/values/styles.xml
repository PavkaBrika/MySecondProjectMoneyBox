<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActivityBackground">
        <item name="android:background">@drawable/backgroundcolor</item>
    </style>
    <style name="ButtonsColor">
        <item name="android:tint">@color/mainActivityButtonsColor</item>
        <item name="android:backgroundTint">@color/buttonColor</item>
    </style>
    <style name="ChangeCharacterActivityTextAndRadioButtonColor">
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonTint">@color/buttonColor</item>
    </style>
    <style name="ChangeCharacterActivityBackgroundTextViewColor">
        <item name="android:backgroundTint">@color/black</item>
    </style>
    <style name="MyEditTextTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/statusBarColor</item>
    </style>
    <style name="ThoughtsImageViewSrc">
        <item name="android:src">@drawable/thoughts2</item>
    </style>
    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:backgroundTint">@color/dialogActivitiesBackgroundColor</item>
        <item name="android:textColor">@color/black</item>
        <item name="buttonTint">@color/black</item>
    </style>
    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>
    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">28dp</item>
        <item name="cornerSizeTopLeft">28dp</item>

    </style>



</resources>