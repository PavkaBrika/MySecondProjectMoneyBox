<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/titleSettings"
        android:textSize="24sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <RadioButton
            android:id="@+id/griffButton"
            android:checked="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/characterNameGriff"
            style="@style/ChangeCharacterActivityTextAndRadioButtonColor"/>

        <RadioButton
            android:id="@+id/mrkrabsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/characterNameMrKrabs"
            style="@style/ChangeCharacterActivityTextAndRadioButtonColor"/>

        <RadioButton
            android:id="@+id/mcduckButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/characterNameScroogeMcDuck"
            style="@style/ChangeCharacterActivityTextAndRadioButtonColor"/>

        <RadioButton
            android:id="@+id/boobaButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/characterNameBooba"
            style="@style/ChangeCharacterActivityTextAndRadioButtonColor"/>

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        style="@style/ChangeCharacterActivityBackgroundTextViewColor"
        />

    <CheckBox
        android:id="@+id/checkBoxEnableVibration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/checkBoxTextEnableVibrationChangeCharacter"
        android:checked="true"
        android:layout_marginTop="8dp"
        style="@style/ChangeCharacterActivityTextAndRadioButtonColor"/>

    <CheckBox
        android:id="@+id/checkBoxEnableSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/checkBoxTextEnableSoundChangeCharacter"
        style="@style/ChangeCharacterActivityTextAndRadioButtonColor"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonOk"
            style="@style/FilledButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCancel"
            style="@style/OutlineButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonOk"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>