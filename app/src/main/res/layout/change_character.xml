<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="4dp"
        android:text="@string/titleChangeCharacter"
        style="@style/ChangeCharacterActivityTextColor"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        style="@style/ChangeCharacterActivityBackgroundTextViewColor" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/griffButton"
            android:checked="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/characterNameGriff"
            style="@style/ChangeCharacterActivityTextAndRadioButtonColor"/>

        <RadioButton
            android:id="@+id/mrkrabsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/characterNameMrKrabs"
            style="@style/ChangeCharacterActivityTextAndRadioButtonColor"/>

        <RadioButton
            android:id="@+id/mcduckButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/characterNameScroogeMcDuck"
            style="@style/ChangeCharacterActivityTextAndRadioButtonColor"/>

        <RadioButton
            android:id="@+id/homerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/characterNameHomerSimpson"
            style="@style/ChangeCharacterActivityTextAndRadioButtonColor"/>

        <RadioButton
            android:id="@+id/griffinButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/characterNamePeterGriffin"
            style="@style/ChangeCharacterActivityTextAndRadioButtonColor"/>


    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        style="@style/ChangeCharacterActivityBackgroundTextViewColor" />

    <CheckBox
        android:id="@+id/checkBoxEnableVibration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/checkBoxTextEnableVibrationChangeCharacter"
        android:checked="true"
        android:layout_margin="8dp"
        style="@style/ChangeCharacterActivityTextAndRadioButtonColor"/>

    <CheckBox
        android:id="@+id/checkBoxEnableSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/checkBoxTextEnableSoundChangeCharacter"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        style="@style/ChangeCharacterActivityTextAndRadioButtonColor"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        style="@style/ChangeCharacterActivityBackgroundTextViewColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:text="@string/cancel"
            style="@style/ButtonsColor"/>

        <Button
            android:id="@+id/buttonOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:text="OK"
            style="@style/ButtonsColor"/>

    </LinearLayout>




</LinearLayout>