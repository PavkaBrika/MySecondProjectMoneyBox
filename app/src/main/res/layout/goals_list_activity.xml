<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/firstGoalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/firstgoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item"
            android:textSize="17sp"
            android:padding="0dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/firstgoalmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@android:color/transparent"
                android:elevation="2dp"
                android:padding="0dp"
                android:text="Money"
                android:textSize="12sp" />

            <ProgressBar
                android:id="@+id/firstBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:scaleY="7" />

        </RelativeLayout>

        <TextView
            android:id="@+id/firstgoalcost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Left"
            android:textSize="17sp"
            android:padding="0dp"
            android:textAlignment="center"/>

    </LinearLayout>

    <Button
        android:id="@+id/firstGoalCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/firstbuttongoalslist"
        style="@style/ButtonsColor"/>

    <TextView
        android:id="@+id/firstLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        style="@style/ChangeCharacterActivityBackgroundTextViewColor" />

    <LinearLayout
        android:id="@+id/secondGoalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >



        <TextView
            android:id="@+id/secondgoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item"
            android:textSize="17sp"
            android:padding="0dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textStyle="bold"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/secondgoalmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@android:color/transparent"
                android:elevation="2dp"
                android:padding="0dp"
                android:text="Money"
                android:textSize="12sp" />

            <ProgressBar
                android:id="@+id/secondBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:scaleY="7" />

        </RelativeLayout>

        <TextView
            android:id="@+id/secondgoalcost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Left"
            android:textSize="17sp"
            android:padding="0dp"
            android:textAlignment="center"/>

    </LinearLayout>

    <Button
        android:id="@+id/secondGoalCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/secondbuttongoalslist"
        style="@style/ButtonsColor"/>

    <TextView
        android:id="@+id/secondLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        style="@style/ChangeCharacterActivityBackgroundTextViewColor" />

    <LinearLayout
        android:id="@+id/thirdGoalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/thirdgoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item"
            android:textSize="17sp"
            android:textStyle="bold"
            android:padding="0dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/thirdgoalmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:padding="0dp"
                android:backgroundTint="@android:color/transparent"
                android:elevation="2dp"
                android:text="Money"
                android:textSize="12sp" />

            <ProgressBar
                android:id="@+id/thirdBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:scaleY="7" />

        </RelativeLayout>

        <TextView
            android:id="@+id/thirdgoalcost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Left"
            android:padding="0dp"
            android:textSize="17sp"
            android:textAlignment="center"/>

    </LinearLayout>

    <Button
        android:id="@+id/thirdGoalCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/thirdbuttongoalslist"
        style="@style/ButtonsColor"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        style="@style/ChangeCharacterActivityBackgroundTextViewColor" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        style="@style/ButtonsColor" />

</LinearLayout>