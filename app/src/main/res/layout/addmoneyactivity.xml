<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textSize="24sp"
        android:text="@string/activityTitleAddMoney"/>


    <EditText
        android:id="@+id/editTextAddMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="@string/amountHint"
        android:maxLength="7"
        android:inputType="numberDecimal"
        android:textColorHint="#616161"
        style="@style/MyEditTextTheme"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_remove_24"
                android:layout_marginEnd="4dp"
                android:text="@string/remove"
                style="@style/ButtonsColorOutline"/>

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add"
                android:drawableLeft="@drawable/ic_baseline_add_24"
                android:layout_marginStart="4dp"
                style="@style/ButtonsColor"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>