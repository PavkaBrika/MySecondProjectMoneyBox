<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    style="@style/MainActivityBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activity.StartActivity">

    <ImageView
        android:id="@+id/imageViewThoughts"
        style="@style/ThoughtsImageViewSrc"
        android:layout_width="393dp"
        android:layout_height="319dp"
        android:elevation="4dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/imageViewCharacter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.755"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/buttonReset"
        style="@style/ButtonsColor"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_baseline_refresh_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resetHintTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alertDialogTitle"
        app:layout_constraintEnd_toEndOf="@+id/buttonReset"
        app:layout_constraintStart_toStartOf="@+id/buttonReset"
        app:layout_constraintTop_toBottomOf="@+id/buttonReset" />

    <ImageView
        android:id="@+id/buttonSettings"
        style="@style/ButtonsColor"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_baseline_settings_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settingsHintTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titleSettings"
        app:layout_constraintEnd_toEndOf="@+id/buttonSettings"
        app:layout_constraintStart_toStartOf="@+id/buttonSettings"
        app:layout_constraintTop_toBottomOf="@+id/buttonSettings" />

    <ImageView
        android:id="@+id/buttonGoalsList"
        style="@style/ButtonsColor"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:src="@drawable/outline_menu_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsHintTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activityHintGoals"
        app:layout_constraintEnd_toEndOf="@+id/buttonGoalsList"
        app:layout_constraintStart_toStartOf="@+id/buttonGoalsList"
        app:layout_constraintTop_toBottomOf="@+id/buttonGoalsList" />


    <ImageView
        android:id="@+id/buttonAddSubMoney"
        style="@style/ButtonsColor"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/outline_currency_exchange_24"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/bannerAdView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/changeAmountHintTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activityTitleAddMoney"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/buttonAddSubMoney"
        app:layout_constraintStart_toStartOf="@+id/buttonAddSubMoney"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddSubMoney" />

    <TextView
        android:id="@+id/item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="16dp"
        android:autoSizeMaxTextSize="36sp"
        android:autoSizeMinTextSize="28sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:elevation="4dp"
        android:maxLines="2"
        android:text=""
        android:textAlignment="center"
        android:textSize="28sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/imageViewThoughts"
        app:layout_constraintStart_toStartOf="@+id/imageViewThoughts"
        app:layout_constraintTop_toTopOf="@+id/imageViewThoughts" />

    <TextView
        android:id="@+id/money"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="36sp"
        android:autoSizeMinTextSize="16sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:elevation="2dp"
        android:maxLines="1"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#a5804a"
        android:layout_marginHorizontal="32dp"
        android:textSize="28sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.34" />

    <ImageView
        android:id="@+id/coins1ImageView"
        android:layout_width="167dp"
        android:layout_height="59dp"
        android:layout_marginBottom="4dp"
        android:elevation="2dp"
        android:src="@drawable/coinsfirst"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="@+id/imageView" />


    <ImageView
        android:id="@+id/coins2ImageView"
        android:layout_width="201dp"
        android:layout_height="71dp"
        android:layout_marginBottom="20dp"
        android:elevation="2dp"
        android:src="@drawable/coinssecond"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView" />

    <ImageView
        android:id="@+id/coins3ImageView"
        android:layout_width="203dp"
        android:layout_height="81dp"
        android:layout_marginBottom="36dp"
        android:elevation="3dp"
        android:src="@drawable/coinsthird"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/imageView" />

    <ImageView
        android:id="@+id/coins4ImageView"
        android:layout_width="223dp"
        android:layout_height="91dp"
        android:layout_marginBottom="52dp"
        android:elevation="3dp"
        android:src="@drawable/coinsforth"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView" />


    <ImageView
        android:id="@+id/coins5ImageView"
        android:layout_width="202dp"
        android:layout_height="80dp"
        android:layout_marginBottom="80dp"
        android:elevation="3dp"
        android:src="@drawable/coinsfifth"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="@+id/imageView" />

    <ImageView
        android:id="@+id/coins6ImageView"
        android:layout_width="221dp"
        android:layout_height="92dp"
        android:layout_marginBottom="104dp"
        android:elevation="3dp"
        android:src="@drawable/coinssixth"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView" />

    <ImageView
        android:id="@+id/coins7ImageView"
        android:layout_width="203dp"
        android:layout_height="76dp"
        android:layout_marginBottom="126dp"
        android:elevation="3dp"
        android:src="@drawable/coinsseventh"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="@+id/imageView" />

    <ImageView
        android:id="@+id/coins8ImageView"
        android:layout_width="203dp"
        android:layout_height="76dp"
        android:layout_marginBottom="156dp"
        android:elevation="3dp"
        android:src="@drawable/coinseighth"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView" />

    <ImageView
        android:id="@+id/coins9ImageView"
        android:layout_width="177dp"
        android:layout_height="57dp"
        android:layout_marginBottom="265dp"
        android:elevation="3dp"
        android:src="@drawable/coinsnineth"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="257dp"
        android:layout_height="383dp"
        android:src="@drawable/moneyjar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <ImageView
        android:id="@+id/imageViewCharacter"
        android:layout_width="216dp"
        android:layout_height="203dp"
        android:layout_marginTop="192dp"
        android:elevation="4dp"
        android:src="@drawable/griff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="@+id/HintToAddNewGoalTextView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/costEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:autoSizeMaxTextSize="36sp"
        android:autoSizeMinTextSize="9sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:elevation="4dp"
        android:maxLines="2"
        android:layout_marginHorizontal="40dp"
        android:text="costEditText"
        android:textAlignment="center"
        android:textSize="28sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/imageViewThoughts"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toStartOf="@+id/imageViewThoughts"
        app:layout_constraintTop_toBottomOf="@+id/item" />


    <TextView
        android:id="@+id/leftTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:autoSizeMaxTextSize="36sp"
        android:autoSizeMinTextSize="9sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:elevation="4dp"
        android:maxLines="2"
        android:text="Left"
        android:textAlignment="center"
        android:textSize="28sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/imageViewThoughts"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/imageViewThoughts"
        app:layout_constraintTop_toBottomOf="@+id/costEditText" />

    <TextView
        android:id="@+id/HintToAddNewGoalTextView"
        android:layout_width="160dp"
        android:layout_height="53dp"
        android:text="@string/textHintToAddNewGoalTextView"
        android:textAlignment="center"
        android:textColor="#a5804a"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.32999998" />

    <TextView
        android:id="@+id/mainActivityHintTextView"
        android:layout_width="251dp"
        android:layout_height="48dp"
        android:maxLines="2"
        android:text="@string/mainActivityHint"
        android:textAlignment="center"
        android:textSize="17dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/buttonSettings"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toEndOf="@+id/buttonReset"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.842" />

    <com.yandex.mobile.ads.banner.BannerAdView
        android:id="@+id/bannerAdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>