<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityBackground">
        <item name="android:background">@drawable/backgroundcolornight</item>
    </style>

    <style name="ButtonsColor">
        <item name="android:tint">@color/mainActivityButtonsColorNight</item>
        <item name="android:backgroundTint">@color/buttonColorNight</item>
        <item name="cornerRadius">24dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FilledButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="rippleColor">@color/black</item>
    </style>

    <style name="OutlineButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="FilledIconButton" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="rippleColor">@color/black</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="OutlineIconButton" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="strokeColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="ChangeCharacterActivityTextAndRadioButtonColor">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:buttonTint">@color/buttonColorNight</item>
    </style>

    <style name="MyEditTextTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/statusBarColorNight</item>
    </style>

    <style name="TextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/statusBarColorNight</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="ThoughtsImageViewSrc">
        <item name="android:src">@drawable/thoughts2night</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">28dp</item>
        <item name="cornerSizeTopLeft">28dp</item>
    </style>
</resources>