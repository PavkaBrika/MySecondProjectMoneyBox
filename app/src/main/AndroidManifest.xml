<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mysecondprojectmoneybox">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySecondProjectMoneyBox">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddNewGoalActivity"
            android:label="Add new goal"
            android:theme="@style/Theme.AppCompat.Light.Dialog"/>
        <activity
            android:name=".AddMoneyActivity"
            android:label="Add/Minus amount"
            android:theme="@style/Theme.AppCompat.Light.Dialog"/>
    </application>

</manifest>